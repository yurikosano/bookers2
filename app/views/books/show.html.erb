<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3 bg">
            <h2>User info</h2>
            <%= image_tag @user.get_profile_image(63,63) %>
            <table class="table">
                <tr></tr>
                <tr>
                    <th>name</th>
                    <th><%= @user.name %></th>
                </tr>
                <tr>
                    <th>introduction</th>
                    <th><%= @user.introduction %></th>
                </tr>
            </table>
            <div class="row">
            <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %><i class="fas fa-user-cog"></i><% end %>
            </div>
            <h2 class="mt-3">New book</h2>
            <%= form_with model: @book, method: :post do |f| %>
            <div class="form-group">
                <label for="book_title">Title</label>
                <%= f.text_field :title, class: "form-control book_title" %>
            </div>
            <div class="form-group">
                <label for="book_opinion">Opinion</label>
                <%= f.text_area :opinion, class: "form-control book_opinion" %>
            </div>
            <div class="form-group">
                <%= f.submit'Create book', class: 'btn btn-success' %>
            </div>
            <% end %>
        </div>
        <div class="col-md-8 offset-md-1 bg">
            <h2>Book detail<h2>
            <table class="table">
                <tbody>
                    <tr>
                        <td><%= image_tag @user.get_profile_image(40,40) %><br />
                        <%= link_to @user.name, user_path(@user) %></td>
                        <td><%= link_to @book.title, book_path(@book) %></td>
                        <td><%= @book.opinion %></td>
                        <% if @book.user == current_user %>
                        <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %></td>
                        <td><%= link_to "Destroy", book_path(@book.id), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に消しますか?" %></td>
                        <% end %>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

