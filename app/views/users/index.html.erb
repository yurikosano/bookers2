<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3 bg">
          <% render 'users/user', user: @user %>
          <% render 'users/user', book_new: @book_new %>
        <div class="col-md-8 offset-md-1 bg">
          <div class="row">
            <h2>Users</h2>
            <table class="table">
              <thead>
                <tr>
                  <th>image</th>
                  <th>name</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
                <% @users.each do |user| %>
                <tr>
                  <th><%= image_tag @user.get_profile_image(40,40) %></th>
                  <th><%= @user.name %></th>
                  <th><%= link_to "Show", user_path(@user.id) %></th>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
    </div>
</div>

